<!-- PRODUCT-->
<% if(Array.isArray(productList) && productList.length > 0) { %>
    <% for(let product of productList) { %>
        <div class="col-lg-4 col-sm-6">
            <div class="product text-center">
                <div class="mb-3 position-relative">
                    <div class="badge text-white badge-"></div>
                    <a class="d-block" href="/product-detail/<%= product.id%>"><img class="img-fluid w-100" src= "<%= product.img %>" alt="..."></a>
                    <div class="product-overlay">
                        <ul class="mb-0 list-inline">
                            <li class="list-inline-item m-0 p-0"><a class="btn btn-sm btn-outline-dark" href="#"><i class="far fa-heart"></i></a></li>
                            <li class="list-inline-item m-0 p-0"><a class="btn btn-sm btn-dark" href="/add-cart">Add to cart</a></li>
                            <li class="list-inline-item m-0 p-0"><a class="btn btn-sm btn-dark" href="/product-detail/<%= product.id%>">Details</a></li>
                            <li class="list-inline-item mr-0"><a class="btn btn-sm btn-outline-dark" href="#productView" data-toggle="modal"><i class="fas fa-expand"></i></a></li>
                        </ul>
                    </div>
                </div>
                <h6>
                    <a class="reset-anchor" href="/product-detail/<%= product.id%>">
                        <%= product.name %>
                    </a>
                </h6>
                <p class="small text-muted">
                    <%= product.price %>
                </p>
            </div>
        </div>
        <% } %>
            <% } %>